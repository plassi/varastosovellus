{
  "name": "varastosovellus",
  "version": "1.0.0",
  "description": "Ohjelmistotuotanto II kurssin ryhm√§ S:n Varastosovellus",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "cross-env NODE_ENV=production node server.js",
    "server": "cross-env NODE_ENV=development nodemon server.js",
    "client": "cross-env NODE_ENV=development npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "build": "npm run build --prefix client",
    "local": "cross-env NODE_ENV=local-build node server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client",
    "lint": "eslint .",
    "start:test": "cross-env NODE_ENV=test node server.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.2.5",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-log-mongo": "^1.1.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.6"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
